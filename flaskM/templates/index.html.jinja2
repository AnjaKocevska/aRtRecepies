<!DOCTYPE html>
<link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
<html>
<head>
    <title>What to do with bits&pieces @home?</title>
    <hr>
<meta name="viewport" content="width=device-width, initial-scale=1">
<body>
<div class="row">
    <div class="column1" style="background-color:rgb(242, 232, 232);">
        <center>
            <h1>What to do with the bits and pieces at Home</h1> 
            <img src="{{ url_for('static', filename='faceoutline.png') }}"  style="width:500px;height:600px;">
            <h3><big>?</big></h3>
            </center>
    
    </div>

    <div class="column2" style="background-color:rgb(227, 221, 221);">
  
            <form method="POST" action="/register" class="form">
            <!-- hidden tag for security -->
            {{ registration_form.hidden_tag() }}
            {{ registration_form.name.label() }}
            {{ registration_form.name }}
            <br>
            {{ registration_form.surname.label() }}
            {{ registration_form.surname() }}
            <br>
            {{ registration_form.email.label() }}
            {{ registration_form.email() }}
            <br>
            {{ registration_form.password.label() }}
            {{ registration_form.password() }}
            <br>
            {{ registration_form.confirm_password.label() }}
            {{ registration_form.confirm_password() }}
            <br>
            {{ registration_form.submit(class="fabi")}}

            </form>
    </div>

    <div class="login">
      <form method="POST" action="/login" class="form">
      <!-- hidden tag for security -->
      {{ login_form.hidden_tag() }}
      <br>
      {{ login_form.email.label() }}
      {{ login_form.email() }}
      <br>
      {{ login_form.password.label() }}
      {{ login_form.password() }}
      <br> 
      {{ login_form.remember.label() }}
      {{ login_form.remember() }}
      <br>
      {{ login_form.submit(class="hh")}}
      </form>
    </div>
           
<style>

body {
  margin: 0;
  background-color: salmon;
  font-family: Arial, Helvetica, sans-serif;
}

#navbar {
  background-color: salmon;
  position: fixed;
  top: -50px;
  width: 100%;
  display: block;
  transition: top 0.3s;
  height: 50px;
}

#navbar ul {
    list-style: none;
    margin-top: 0;
}

#navbar a {
  float: left;
  display: block;
  color: #f2f2f2;
  text-align: center;
  padding: 15px;
  text-decoration: none;
  font-size: 17px;
}

#navbar a:hover {
  background-color: #ddd;
  color: black;
}
li a, .dropbtn {
  display: inline-block;
  color: white;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
}
li.dropdown {
  display: inline-block;
}
.dropdown-content {
  display: none;
  position: absolute;

  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  z-index: 1;
  background-color: salmon;
}
.dropdown-content a {
  color: black;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
}

.dropdown:hover .dropdown-content {
  display: block;
}

.dropdown-item {
    float: left;
    clear: left;
    
}
</style>    
    
</div>
     <div id="navbar">
     <ul>
        <li><a href="#Cartons">Cartons</a></li>
        <li><a href="#Paper">Paper</a></li>
        <li><a href="#Cans">Cans</a></li>
        <li class="dropdown">
        <a href="javascript:void(0)"
        class="dropbtn">Bottles</a>
        <div class="dropdown-content">
        <div class="dropdown-item"><a href="/glass">Glass </a></div>
        <div class="dropdown-item"><a href="/plastic">Plastic </a></div>
        {% if email %}
        <div>{{ email }}</div>
        {% endif %}
        </li>
   
    
    </ul>
    
</div>
            
<script>
// When the user scrolls down 20px from the top of the document, slide down the navbar
window.onscroll = function() {scrollFunction()};

function scrollFunction() {
  if (document.body.scrollTop > 50 || document.documentElement.scrollTop > 50) {
    document.getElementById("navbar").style.top = "0";
  } else {
    document.getElementById("navbar").style.top = "-50px";
  }
}
</script>



 
</div>
</head>
</body>
</html>


